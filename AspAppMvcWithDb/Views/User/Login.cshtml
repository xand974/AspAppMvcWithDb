@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form asp-controller="User" asp-action="Login" method="post">
    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" type="text" class="form-control">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="RememberMe" class="form-label"></label>
        <input type="checkbox" style="width:50px;" asp-for="RememberMe" class="form-control">
        <span asp-validation-for="RememberMe" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-primary">Poster</button>
</form>