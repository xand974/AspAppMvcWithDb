@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Utilisateurs";
}

<h1>Utilisateurs</h1>

@if (Model.Any())
{
    @foreach (var user in Model)
    {
        <div class="card">
            <div class="card-header">
                <h3>Liste des users</h3>
            </div>

            <div class="card-body">
                <input disabled value="@user.Id" />
                <p>@user.UserName</p>
                <p></p>
            </div>
            <div class="card-footer">
                <a asp-controller="Administration" asp-action="EditUser" asp-route-userId="@user.Id" class="btn btn-primary">Editer @user.UserName</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Retourner</a>
            </div>
        </div>
    }
}