@model ListRoleViewModel
@{
    ViewData["Title"] = "Roles";
}

<h1>Tous les rôles</h1>

<div class="container-fluid ">
    <a class="btn btn-primary" asp-controller="Administration" asp-action="GetRole">Ajouter un rôle</a>

    @if (Model.roles.Any())
    {
        @foreach (var role in Model.roles)
        {
            <div class="card" style="width: 18rem;">

                <div class="card-body">
                    <p class="card-text">Role Id : @role.Id</p>
                    <p class="card-text">Name : @role.Name</p>
                    <a class="btn btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Editer</a>
                    <a class="btn btn-danger" asp-controller="Administration" asp-action="DeleteRole" asp-route-id="@role.Id">Supprimer</a>

                </div>
            </div>
        }
    }
    else
    {
        <div class="mb-6">
            <p class="card-text">Pas de liste pour l'instant</p>
        </div>
    }



</div>